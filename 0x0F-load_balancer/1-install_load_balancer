#!/usr/bin/env bash

# Installs and configure HAproxy on the lb-01 server
# using roundrobin algorithm

sudo apt-get update -y
sudo apt-get install haproxy -y

# Make sure that HAproxy can be managed via an init script
# Make sure that your servers are configured with the right hostnames: [STUDENT_ID]-web-01 and [STUDENT_ID]-web-02.

echo "
frontend web-frontend
	bind *:80
	mode http
	default_backend web-backend

backend web-backend
	balance roundrobin
	server 120281-web-01 100.26.174.161:80 check
	server 120281-web-02 35.175.126.31:80 check
" >>  /etc/haproxy/haproxy.cfg



# write a Bash script that configures a new Ubuntu machine
sudo sed -i  's/ENABLED=0/ENABLED=1/g' /etc/default/haproxy


# Start the HAProxy service
sudo service haproxy restart
